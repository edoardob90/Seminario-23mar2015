\defbeamertemplate*{frametitle}{kaiser2}[1][]
{
  \usebeamerfont{frametitle}{\usebeamercolor[bg]{section in head/foot}\insertframetitle\par}%
  \ifx\insertsubtitle\@empty%
  \else%
    \vskip0.25em%
    {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{subtitle}\insertsubframetitle\par}%
  \fi%
  \hspace*{0.035\paperwidth}\begin{beamercolorbox}[wd=0.93\paperwidth,ht=.3ex,#1]{title}
  \end{beamercolorbox}
}

